<div id="dialog-app" class="dialog-content">
    <p> {{content}} </p>
    {{log inputs}}
    {{#each inputs}}
        <div class="form-group">
        {{#if isCheckbox}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <input type="checkbox" id="[{{@../index}}, {{@index}}]" name="checkbox.{{value}}" value={{value}} {{#if isChecked}}checked{{/if}}>
                        <label for="[{{@../index}}, {{@index}}]">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <input type="checkbox" id="[{{@../index}}, {{@index}}]" name="checkbox.{{value}}" value={{value}} {{#if isChecked}}checked{{/if}}>
                    <label for="[{{@../index}}, {{@index}}]">
                        {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                        <p class="label-text">{{localize label}}</p>
                    </label>
                {{/each}}
            {{/if}}
        {{else if isRadio}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <input type="radio" id="[{{@../index}}, {{@index}}]" name="radio.{{value}}" value={{value}} {{#if isSelected}}checked{{/if}}>
                        <label for="[{{@../index}}, {{@index}}]">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <input type="radio" id="[{{@../index}}, {{@index}}]" name="radio.{{value}}" value={{value}} {{#if isSelected}}checked{{/if}}>
                    <label for="[{{@../index}}, {{@index}}]">
                        {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                        <p class="label-text">{{localize label}}</p>
                    </label>
                {{/each}}
            {{/if}}
        {{else if isSelect}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <select id="[{{@../index}}, {{@index}}]" name="select.{{value}}">
                            {{#each options}}
                                <option value="{{this}}" {{#if (eq this ../currentAmount)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                        <label for="[{{@../index}}, {{@index}}]">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="[{{@../index}}, {{@index}}]">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                        <select id="[{{@../index}}, {{@index}}]" name="select.{{value}}">
                            {{#each options}}
                                <option value="{{this}}" {{#if (eq this ../currentAmount)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                {{/each}}
            {{/if}}
        {{else if isText}}
            {{#if displayAsRows}}
                <div class="row-display">
                    <input type="text" id="[{{@../index}}, {{@index}}]" name="text.{{id}}" value="{{value}}">
                    <label for="[{{@../index}}, {{@index}}]">
                        {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                        <p class="label-text">{{localize label}}</p>
                    </label>
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="[{{@../index}}, {{@index}}]">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                        <input type="text" id="[{{@../index}}, {{@index}}]" name="text.{{id}}" value="{{value}}">
                    </div>
                {{/each}}
            {{/if}}
        {{else if isNumber}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <input type="text" id="[{{@../index}}, {{@index}}]" name="number.{{id}}" value={{value}}>
                        <label for="[{{@../index}}, {{@index}}]">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="[{{@../index}}, {{@index}}]">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                        <input type="text" id="[{{@../index}}, {{@index}}]" name="number.{{id}}" value={{value}}>
                    </div>
                {{/each}}
            {{/if}}
        {{else if isFilePicker}}
            {{#if displayAsRows}}
                <div class="row-display">
                    <label for="[{{@../index}}, {{@index}}]"><p class="label-text">{{localize label}}</p></label>
                    <div></div>
                    <file-picker id="[{{@../index}}, {{@index}}]" name="file-picker.{{id}}" type="{{type}}" placeholder="{{value}}"></file-picker>
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="[{{@../index}}, {{@index}}]"><p class="label-text">{{localize label}}</p></label>
                        <file-picker id="[{{@../index}}, {{@index}}]" name="file-picker.{{id}}" type="{{type}}" placeholder="{{value}}"></file-picker>
                    </div>
                {{/each}}
            {{/if}}
        {{/if}}
        </div>
    {{/each}}
</div>