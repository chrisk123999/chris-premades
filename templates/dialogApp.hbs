<div id="dialog-app" class="dialog-content cpr-dialog scrollable">
    <p class="content"> {{{localize content}}} </p>
    {{#each inputs}}
        <div class="form-group">
        {{#if isButton}}
            {{#if displayAsRows}}
                <div class="flex-col">
                    {{#each options}}
                        <button type="submit" class="form-button" data-action="confirm" id="i{{@../index}}j{{@index}}" name="{{name}}"{{#if tooltip}}data-tooltip="{{tooltip}}"{{/if}}>
                            {{#if image}}<img class="button-image" src={{image}}>{{/if}}
                            <p class="button-text" >{{localize label}}</p>
                        </button>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <button type="submit" class="form-button" data-action="confirm" id="i{{@../index}}j{{@index}}" name="{{name}}">
                        {{#if image}}<img class="button-image" src={{image}}>{{/if}}
                        <p class="button-text" {{#if tooltip}}data-tooltip="{{tooltip}}"{{/if}}>{{localize label}}</p>
                    </button>
                {{/each}}
            {{/if}}
        {{else if isCheckbox}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <input type="checkbox" {{#if (gte ../currentNum ../totalMax)}}{{#unless isChecked}}disabled{{/unless}}{{/if}} id="i{{@../index}}j{{@index}}" name="{{name}}" {{#if isChecked}}checked{{/if}}>
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <input type="checkbox" {{#if (gte ../currentNum ../totalMax)}}{{#unless isChecked}}disabled{{/unless}}{{/if}} id="i{{@../index}}j{{@index}}" name="{{name}}" {{#if isChecked}}checked{{/if}}>
                    <label for="i{{@../index}}j{{@index}}">
                        {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                        <p class="label-text">{{localize label}}</p>
                    </label>
                {{/each}}
            {{/if}}
        {{else if isRadio}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <input type="radio" id="i{{@../index}}j{{@index}}" name="{{../radioName}}" value="{{name}}" {{#if isChecked}}checked{{/if}}>
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <input type="radio" id="i{{@../index}}j{{@index}}" name="{{../radioName}}" value="{{name}}" {{#if isChecked}}checked{{/if}}>
                    <label for="i{{@../index}}j{{@index}}">
                        {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                        <p class="label-text">{{localize label}}</p>
                    </label>
                {{/each}}
            {{/if}}
        {{else if isSelectAmount}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <select id="i{{@../index}}j{{@index}}" name="{{name}}">
                            {{#each options}}
                                <option value="{{this}}" {{#if (gt this ../currentMaxAmount)}}disabled{{/if}} {{#if (eq this ../currentAmount)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                        <select id="i{{@../index}}j{{@index}}" name="{{name}}">
                            {{#each options}}
                                <option value="{{this}}" {{#if (gt this ../currentMaxAmount)}}disabled{{/if}} {{#if (eq this ../currentAmount)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                {{/each}}
            {{/if}}
        {{else if isSelectOption}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <select id="i{{@../index}}j{{@index}}" name="{{name}}">
                            {{#each options}}
                                <option value="{{value}}" {{#if (eq value ../currentValue)}}selected{{/if}}>{{localize label}}</option>
                            {{/each}}
                        </select>
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                        <select id="i{{@../index}}j{{@index}}" name="{{name}}">
                            {{#each options}}
                                <option value="{{value}}" {{#if (eq value ../currentValue)}}selected{{/if}}>{{localize label}}</option>
                            {{/each}}
                        </select>
                    </div>
                {{/each}}
            {{/if}}
        {{else if isSelectMany}}
            <div class="flexcol">
                {{#each options}}
                    <div class="select-many">
                        <label for="i{{@../index}}j{{@index}}">{{localize label option=i18nOption}}</label>
                        <multi-select id="i{{@../index}}j{{@index}}" name="{{name}}" {{#if isDisabled}}disabled{{/if}} {{#if tooltip}}data-tooltip="{{tooltip}}"{{/if}}>
                            {{#each options}}
                                <option value="{{value}}" {{#if isSelected}}selected{{/if}} {{#if isDisabled}}disabled{{/if}} {{#if tooltip}}data-tooltip="{{tooltip}}"{{/if}}>
                                    {{localize label}}
                                </option>
                            {{/each}}
                        </multi-select>
                    </div>
                {{/each}}
            </div>
        {{else if isText}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <input type="text" id="i{{@../index}}j{{@index}}" name="{{name}}" value="{{value}}">
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                        <input type="text" id="i{{@../index}}j{{@index}}" name="{{name}}" value="{{value}}">
                    </div>
                {{/each}}
            {{/if}}
        {{else if isNumber}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <input type="number" id="i{{@../index}}j{{@index}}" name="{{name}}" value="{{value}}">
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="i{{@../index}}j{{@index}}">
                            {{#if image}}<img class="label-image" src={{image}}>{{/if}}
                            <p class="label-text">{{localize label}}</p>
                        </label>
                        <input type="number" id="i{{@../index}}j{{@index}}" name="{{name}}" value="{{value}}">
                    </div>
                {{/each}}
            {{/if}}
        {{else if isFilePicker}}
            {{#if displayAsRows}}
                <div class="row-display">
                    {{#each options}}
                        <label for="i{{@../index}}j{{@index}}"><p class="label-text">{{localize label}}</p></label>
                        <file-picker id="i{{@../index}}j{{@index}}" name="{{name}}" type="{{type}}" value="{{value}}"></file-picker>
                    {{/each}}
                </div>
            {{else}}
                {{#each options}}
                    <div>
                        <label for="i{{@../index}}j{{@index}}"><p class="label-text">{{localize label}}</p></label>
                        <file-picker id="i{{@../index}}j{{@index}}" name="{{name}}" type="{{type}}" value="{{value}}"></file-picker>
                    </div>
                {{/each}}
            {{/if}}
        {{/if}}
        </div>
    {{/each}}
</div>