import {chris} from '../../../helperFunctions.js';
export async function bladesong({speaker, actor, token, character, item, args, scope, workflow}) {
  let songOfVictory = chris.getItem(workflow.actor, 'Song of Victory')
  if (!songOfVictory) return;
  let effectData = {
      'name': songOfVictory.name,
      'icon': songOfVictory.img,
      'origin': songOfVictory.uuid,
      'duration': {
          'rounds': 10,
          'seconds': 60
      },
      'changes': [
          {
          'key': 'system.bonuses.mwak.damage',
          'mode': 0,
          'value': '+ @abilities.int.mod',
          'priority': 20
          }
      ],
      'flags': {
          'dae': {
          'specialDuration': [
              'zeroHP'
          ],
          }
      }
  }
  
  chris.createEffect(workflow.actor, effectData)
}
